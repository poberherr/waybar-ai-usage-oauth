post_install() {
  cat <<'EOF'
:: waybar-ai-usage-oauth installed
   Before uninstalling, run: waybar-ai-usage cleanup
   After setup/cleanup, restart Waybar (e.g. pkill waybar && waybar &)
EOF
}

post_upgrade() {
  post_install
}

pre_remove() {
  cat <<'EOF'
:: waybar-ai-usage-oauth pre-remove
   If you previously ran setup, consider running:
     waybar-ai-usage cleanup
   to remove Waybar config entries/styles before uninstalling.
EOF
}
